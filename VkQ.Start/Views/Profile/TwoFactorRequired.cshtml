@model VkQ.WEB.ViewModels.Vk.TwoFactorViewModel
<div class="row">
    <div class="col-lg-6">
        <h3>Двухфакторная авторизация</h3>
        <form asp-action="TwoFactorVk" method="post" class="form-horizontal">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <div class="mt-3">
                    <label asp-for="Code"></label>
                    <input asp-for="Code" class="form-control"/>
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>
                <div class="mt-3">
                    <input class="btn shadow-none btn-outline-dark" type="submit" value="Отправить">
                </div>
            </div>
        </form>
    </div>
</div>