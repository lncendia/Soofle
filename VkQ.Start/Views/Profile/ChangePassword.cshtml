@model VkQ.WEB.ViewModels.Settings.ChangePasswordViewModel
<form asp-controller="Settings" asp-action="ChangePassword" method="post" class="form-horizontal">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <div>
            <label asp-for="OldPassword"></label>
            <input asp-for="OldPassword" class="form-control"/>
            <span asp-validation-for="OldPassword" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control"/>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <label asp-for="PasswordConfirm"></label>
            <input asp-for="PasswordConfirm" class="form-control"/>
            <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <input class="btn shadow-none btn-outline-dark" type="submit" value="Изменить пароль">
        </div>
    </div>
</form>