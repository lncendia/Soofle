@model VkQ.WEB.ViewModels.Links.CreateLinkViewModel
<h3>Создание связи</h3>
<form asp-controller="Link" asp-action="CreateLink" method="post" class="form-horizontal">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <div class="row g-3">
            <div class="col-12">
                <input asp-for="Email" class="form-check-input" type="checkbox" checked>
                <label asp-for="Email"></label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="col-12">
                <div class="text-center">
                    <input class="btn shadow-none btn-outline-dark" type="submit" value="Создать ссылку">
                </div>
            </div>
        </div>
    </div>
</form>