@using Microsoft.AspNetCore.Mvc.TagHelpers
@model WebApplication.ViewModels.Settings.CreateCommunicationLinkViewModel
@{
    ViewData["Title"] = "Создание связи";
}
<div class="row">
    <div class="col-lg-6">
        <h3>Создание связи</h3>
        <form asp-action="CreateCommunication" method="post" class="form-horizontal">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <div class="row g-3">
                    <div class="col-12">
                        <div class="form-check form-switch">
                            <input asp-for="CommonThieves" class="form-check-input" type="checkbox" checked>
                            <label asp-for="CommonThieves"></label>
                            <span asp-validation-for="CommonThieves" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-check form-switch">
                            <input asp-for="CommonReports" class="form-check-input" type="checkbox" checked>
                            <label asp-for="CommonReports"></label>
                            <span asp-validation-for="CommonReports" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="text-center">
                            <input class="btn shadow-none btn-outline-dark" type="submit" value="Создать ссылку">
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>