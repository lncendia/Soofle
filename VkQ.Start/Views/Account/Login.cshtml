@model WebApplication.ViewModels.Account.LoginViewModel
@{
    ViewData["Title"] = "Вход";
}
<div class="row">
    <div class="col-lg-6">
        <h3>Вход в приложение</h3>
        <form asp-action="Login" method="post" class="form-horizontal pb-3">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <div class="row g-3">
                    <div class="col-12">
                        <label asp-for="Login"></label>
                        <input asp-for="Login" class="form-control"/>
                        <span asp-validation-for="Login" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" class="form-control"/>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="remember" asp-for="RememberMe">
                            <label asp-for="RememberMe" class="form-check-label" for="remember"></label>
                        </div>
                    </div>
                    <div class="col-12">
                        <input class="btn shadow-none btn-outline-dark" type="submit" value="Войти">
                    </div>
                </div>
            </div>
        </form>
        <div class="row gy-3">
            <div class="col-12">
                <a asp-action="Register">Впервые здесь? Зарегистрироваться</a>
            </div>
            <div class="col-12">
                <a asp-action="ResetPassword">Забыли пароль?</a>
            </div>
        </div>
    </div>
</div>