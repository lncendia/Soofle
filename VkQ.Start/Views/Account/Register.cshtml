@model WebApplication.ViewModels.Account.RegisterViewModel
@{
    ViewData["Title"] = "Регистрация";
}
<div class="row">
    <div class="col-lg-6">
        <h3>Регистрация</h3>
        <form asp-action="Register" method="post" class="form-horizontal">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <div class="row g-3">
                    <div class="col-12">
                        <label asp-for="Username"></label>
                        <input asp-for="Username" class="form-control"/>
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control"/>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <label asp-for="TimeZoneId"></label>
                        <select asp-for="TimeZoneId" asp-items=@TimeZoneInfo.GetSystemTimeZones().Select(x => new SelectListItem(x.DisplayName, x.Id)) class="form-select">
                            <option selected="selected" disabled="disabled">Выберите часовой пояс</option>
                        </select>
                        <span asp-validation-for="TimeZoneId" class="text-danger"></span>
                        <p class="hint-block">Используется для корректной работы с датами.</p>
                    </div>
                    <div class="col-sm-6">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" class="form-control"/>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="col-sm-6">
                        <label asp-for="PasswordConfirm"></label>
                        <input asp-for="PasswordConfirm" class="form-control"/>
                        <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <input class="btn shadow-none btn-outline-dark" type="submit" value="Регистрация">
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>