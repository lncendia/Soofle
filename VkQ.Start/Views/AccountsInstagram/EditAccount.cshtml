@using Microsoft.AspNetCore.Mvc.TagHelpers
@using WebApplication.Data.Enums.AccountsInstagram
@using WebApplication.Data.Services
@model WebApplication.ViewModels.AccountsInstagram.InstagramEditViewModel
@inject ProxyService _proxyService
@{
    ViewData["Title"] = "Изменение аккаунта";
}
<div class="row">
    <div class="col-lg-6">
        <h3>Изменение аккаунта</h3>
        <form asp-action="EditAccount" method="post" class="form-horizontal">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <div class="row g-3">
                    <div class="col-sm-6">
                        <input type="hidden" asp-for="Id" class="form-control">
                        <label asp-for="Username"></label>
                        <input asp-for="Username" class="form-control"/>
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="col-sm-6">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" class="form-control"/>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <label asp-for="Country"></label>
                        <select asp-for="Country" asp-items=@_proxyService.GetCountries() class="form-select">
                            <option selected="selected" disabled="disabled">Выберите страну</option>
                        </select>
                        <span asp-validation-for="Country" class="text-danger"></span>
                        <p class="hint-block">Используется для определения подходящего прокси для вашего аккаунта.</p>
                    </div>
                    <div class="col-12">
                        <label asp-for="LikeChat"></label>
                        <input asp-for="LikeChat" class="form-control"/>
                        <span asp-validation-for="LikeChat" class="text-danger"></span>
                        <p class="hint-block">Продублируйте логин, если аккаунт и есть необходимый чат активности.</p>
                    </div>
                    <div class="col-12">
                        <label asp-for="LikeChatType"></label>
                        <select class="form-select" asp-for="LikeChatType" asp-items="Html.GetEnumSelectList<LikeChatType>()"></select>
                        <span asp-validation-for="LikeChatType" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <input class="btn shadow-none btn-outline-dark" type="submit" value="Изменить">
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>