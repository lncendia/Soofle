@using VkQ.Domain.Reposts.ParticipantReport.Enums
@model VkQ.WEB.ViewModels.Elements.ParticipantElementsSearchQueryViewModel
<tr>
    <th></th>
    <th scope="col">
        <input asp-for="Name" class="form-control"/>
    </th>
    <th scope="col">
        <select class="form-select" asp-for="HasChildren">
            <option selected="selected" value="">Все</option>
            <option value="true">Есть</option>
            <option value="false">Нет</option>
        </select>
    </th>
    <th scope="col">
        <select class="form-select" asp-for="ElementType">
            <option selected="selected" value="">Все</option>
            <option value="@ElementType.Rename">Сменил ник</option>
            <option value="@ElementType.Leave">Покинул чат</option>
            <option value="@ElementType.New">Добавлен в чат</option>
        </select>
    </th>
</tr>

@section scripts {
    <script src="~/js/scroller.js"></script>
    <script src="~/js/participantReportElements.js"></script>
}