@model VkQ.WEB.ViewModels.Elements.ParticipantElementsSearchQueryViewModel
<tr>
    <th></th>
    <form asp-action="ParticipantsReport" method="get" class="form-horizontal" id="filter">
        <th scope="col">
            <input asp-for="Name" class="form-control auto-submit"/>
        </th>
        <th scope="col">
            <select class="form-select auto-submit" asp-for="HasChildren">
                <option selected="selected" value>Все</option>
                <option value="true">Есть</option>
                <option value="false">Нет</option>
            </select>
        </th>
        <th scope="col">
            <select class="form-select auto-submit" asp-for="ElementType">
                <option selected="selected" value>Все</option>
                <option value="true">Есть</option>
                <option value="false">Нет</option>
            </select>
        </th>
    </form>
</tr>

@section scripts {
    <script src="~/js/autoSubmit.js"></script>
    <script src="~/js/participantReportElements.js"></script>
}