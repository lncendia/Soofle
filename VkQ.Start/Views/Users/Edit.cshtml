@using System.Globalization
@using WebApplication.Data.Services
@model WebApplication.ViewModels.Users.EditUserViewModel
@inject TimeService _timeService
@{
    var timeZone =await _timeService.GetTimeZoneInfo(User);
    ViewBag.Title = "Редактирование пользователя";
}

<div class="row">
    <div class="col-lg-6">
        <h3>Редактирование пользователя</h3>
        <form asp-action="Edit" asp-controller="Users">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <div class="row g-3">
                    <input type="hidden" asp-for="Id"/>
                    <div class="col-sm-6">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control"/>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="col-sm-6">
                        <label asp-for="Username"></label>
                        <input asp-for="Username" class="form-control"/>
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="col-sm-6">
                        <label asp-for="Subscribe"></label>
                        <input asp-for="Subscribe" value="@(Model.Subscribe.HasValue? TimeZoneInfo.ConvertTimeFromUtc(Model.Subscribe.Value, timeZone).ToString("s"):String.Empty)" class="form-control"/>
                        <span asp-validation-for="Subscribe" class="text-danger"></span>
                    </div>
                    <div class="col-sm-6">
                        <label asp-for="RateId"></label>
                        <select class="form-select" asp-for="RateId" asp-items="@(Model.Rates.Select(rate => new SelectListItem($"{rate.CountPosts:D} публикаций ({rate.Amount.ToString("C", new CultureInfo("Ru"))})", rate.Id.ToString())))">
                            <option selected="selected" value="0">Нет</option>
                        </select>
                        <span asp-validation-for="RateId" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <label asp-for="Block"></label>
                        <input asp-for="Block" value="@(Model.Block.HasValue? TimeZoneInfo.ConvertTimeFromUtc(Model.Block.Value, timeZone).ToString("s"):String.Empty)" class="form-control"/>
                        <span asp-validation-for="Block" class="text-danger"></span>
                    </div>
                    <div class="col-sm-6">
                        <input type="checkbox" class="form-check-input" id="Admin" asp-for="Admin">
                        <label asp-for="Admin" class="form-check-label" for="Admin"></label>
                    </div>
                    <div class="col-12">
                        <input type="submit" value="Сохранить" class="btn shadow-none btn-outline-secondary"/>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>