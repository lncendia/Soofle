@using System.Globalization
@using WebApplication.Data.Services
@model WebApplication.ViewModels.Users.UsersViewModel
@inject TimeService _timeService
@{
    var timeZone = await _timeService.GetTimeZoneInfo(User);
    ViewBag.Title = "Список пользователей";
}
<div class="row">
    <div class="col-6">
        @if (Model.Count != 0)
        {
            int count = (Model.Page - 1) * 30;
            int limit = count + 30;
            <p>Показаны @(count + 1) - @(limit > Model.Count ? Model.Count : limit) из @Model.Count записей.</p>
        }
        else
        {
            <p>Записи не найдены.</p>
        }
    </div>
</div>
<div class="table-responsive">
    <table class="table table-sm table-hover table-bordered table-striped table-condensed text-center align-middle">
        <thead class="align-middle">
        <tr>
            <th scope="col">№</th>
            <th>Имя пользователя</th>
            <th>Email</th>
            <th>Конец подписки</th>
            <th></th>
        </tr>
        <tr>
            <form asp-action="Index" method="get" class="form-horizontal" id="filter">
                <th scope="col">
                </th>
                <th scope="col">
                    <input asp-for="Username" class="form-control auto-submit"/>
                </th>
                <th scope="col">
                    <input asp-for="Email" class="form-control auto-submit"/>
                </th>
                <th scope="col">
                </th>
                <th scope="col">
                </th>
            </form>
        </tr>
        </thead>
        <tbody class="align-middle">
        @for (int i = 0; i < Model.Users.Count; i++)
        {
            var user = Model.Users[i];
            <tr>
                <th scope="row">@(i + 1)</th>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@(user.EndOfSubscribe.HasValue ? TimeZoneInfo.ConvertTimeFromUtc(user.EndOfSubscribe.Value, timeZone).ToString("g", new CultureInfo("Ru")) : "-")</td>
                <td>
                    <div class="btn-group" role="group" aria-label="Basic outlined example">
                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">Изменить</a>
                        <a class="btn btn-sm btn-primary" asp-action="ChangePassword" asp-route-id="@user.Id">Сменить пароль</a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
<nav>
    <ul class="pagination">
        @if (Model.Page != 1)
        {
            if (Model.Page > 2)
            {
                <li class="page-item">
                    <input type="submit" class="page-link shadow-none" autocomplete="off" asp-for="Page" value="1" form="filter">
                </li>
            }
            <li class="page-item">
                <input type="submit" class="d-none" id="btnPrevious" autocomplete="off" asp-for="Page" value="@(Model.Page - 1)" form="filter">
                <label for="btnPrevious" class="page-link" style="cursor: pointer">
                    <span aria-hidden="true">&laquo;</span>
                </label>
            </li>
            <li class="page-item">
                <input type="submit" class="page-link shadow-none" autocomplete="off" asp-for="Page" value="@(Model.Page - 1)" form="filter">
            </li>
        }
        <li class="page-item active">
            <input type="submit" class="page-link shadow-none" autocomplete="off" asp-for="Page" value="@Model.Page" form="filter" disabled>
        </li>
        @if (Model.Page * 30 < Model.Count)
        {
            <li class="page-item">
                <input type="submit" class="page-link shadow-none" autocomplete="off" asp-for="Page" value="@(Model.Page + 1)" form="filter">
            </li>
            <li class="page-item">
                <input type="submit" class="d-none" autocomplete="off" asp-for="Page" id="btnNext" value="@(Model.Page + 1)" form="filter">
                <label for="btnNext" class="page-link" style="cursor: pointer">
                    <span aria-hidden="true">&raquo;</span>
                </label>
            </li>
        }
    </ul>
</nav>

@section scripts {
    <script src="~/js/autoSubmit.js"></script>
}