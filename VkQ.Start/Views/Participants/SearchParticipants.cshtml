@using VkQ.Domain.Participants.Enums
@model VkQ.WEB.ViewModels.Participants.ParticipantsSearchQueryViewModel

<tr>
    <form asp-action="Participants" method="get" class="form-horizontal" id="filter">
        <th scope="col"></th>
        <th scope="col">
            <input asp-for="Username" class="form-control auto-submit"/>
        </th>
        <th scope="col">
            <option selected="selected" value>Все</option>
            <option value="@ParticipantType.User">Страницы</option>
            <option value="@ParticipantType.Group">Группы</option>
        </th>
        <th scope="col">
            <select class="form-select auto-submit" asp-for="HasChild">
                <option selected="selected" value>Все</option>
                <option value="true">Есть</option>
                <option value="false">Нет</option>
            </select>
        </th>
        <th scope="col"></th>
        <th scope="col">
            <select class="form-select auto-submit" asp-for="Vip">
                <option selected="selected" value>Все</option>
                <option value="true">VIP</option>
                <option value="false">Нет</option>
            </select>
        </th>
    </form>
</tr>

@section scripts {
    <script src="~/js/autoSubmit.js"></script>
