@model System.Collections.Generic.List<WebApplication.Models.Instagram>
@{
    ViewData["Title"] = "Выбор чата";
}
<div class="row">
    <div class="col-lg-6">
        <h3>Выбор чата</h3>
        <form asp-action="MyParticipants" method="get" class="form-horizontal">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <div class="row g-3">
                    <div class="col-12">
                        <select name="id" asp-items=@(new SelectList(Model, "Id", "LikeChat")) class="form-select">
                            <option selected="selected" disabled="disabled">Выберите чат активности</option>
                        </select>
                    </div>
                    <div class="col-12">
                        <input class="btn shadow-none btn-outline-dark" type="submit" value="Выбрать">
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>