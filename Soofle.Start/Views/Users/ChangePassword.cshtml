@model Soofle.WEB.ViewModels.Users.ChangePasswordViewModel

<form id="changePassword" asp-action="ChangePassword" asp-controller="Users" method="post" class="form-horizontal">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <input type="hidden" asp-for="Email"/>
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control"/>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="mt-3">
        <input type="submit" value="Сохранить" class="btn shadow-none btn-outline-dark"/>
    </div>
</form>