@model Soofle.WEB.ViewModels.Users.AddSubscribeViewModel

<form id="addSubscribe" asp-action="AddSubscribe" asp-controller="Users" method="post" class="form-horizontal">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <input type="hidden" asp-for="Id"/>
        <label asp-for="CountDays"></label>
        <input asp-for="CountDays" class="form-control"/>
        <span asp-validation-for="CountDays" class="text-danger"></span>
    </div>
    <div class="mt-3">
        <input type="submit" value="Добавить" class="btn shadow-none btn-outline-dark"/>
    </div>
</form>