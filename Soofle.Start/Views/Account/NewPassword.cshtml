
@model Soofle.WEB.ViewModels.Account.EnterNewPasswordViewModel
@{
    ViewData["Title"] = "Новый пароль";
}
<div class="row">
    <div class="col-lg-6">
        <h3>Смена пароля</h3>
        <form asp-action="NewPassword" method="post" class="form-horizontal">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <div class="mt-3">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control"/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="mt-3">
                    <label asp-for="PasswordConfirm"></label>
                    <input asp-for="PasswordConfirm" class="form-control"/>
                    <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                </div>
                <input name="Email" type="hidden" value="@Model.Email">
                <input name="Code" type="hidden" value="@Model.Code">
                <div class="mt-3">
                    <input class="btn shadow-none btn-outline-dark" type="submit" value="Сменить пароль">
                </div>
            </div>
        </form>
    </div>
</div>