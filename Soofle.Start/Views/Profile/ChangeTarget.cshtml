
@model Soofle.WEB.ViewModels.Settings.ChangeTargetViewModel

<form id="changeTarget" asp-controller="Settings" asp-action="ChangeTarget" method="post" class="form-horizontal">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <div>
            <label asp-for="Target"></label>
            <input asp-for="Target" class="form-control"/>
            <span asp-validation-for="Target" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <input class="btn shadow-none btn-outline-dark" type="submit" value="Сменить цель">
        </div>
    </div>
</form>