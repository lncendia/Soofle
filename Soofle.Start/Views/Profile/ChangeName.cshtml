
@model Soofle.WEB.ViewModels.Settings.ChangeNameViewModel

<form id="changeName" asp-controller="Settings" asp-action="ChangeName" method="post" class="form-horizontal">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <div>
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <input class="btn shadow-none btn-outline-dark" type="submit" value="Сменить имя">
        </div>
    </div>
</form>