
@model Soofle.WEB.ViewModels.Vk.TwoFactorViewModel
<form id="activateVk" asp-controller="Vk" asp-action="Activate" method="post" class="form-horizontal">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <div>
            <label asp-for="Code"></label>
            <input asp-for="Code" class="form-control"/>
            <span asp-validation-for="Code" class="text-danger"></span>
            <span>Укажите, если используете двухфакторную аутентификацию</span>
        </div>
        <div class="mt-3">
            <input class="btn shadow-none btn-outline-dark" type="submit" value="Активировать">
        </div>
    </div>
</form>