
@model Soofle.WEB.ViewModels.Vk.SetVkViewModel
<form id="setVk" asp-controller="Vk" asp-action="Change" method="post" class="form-horizontal">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <div>
            <label asp-for="Login"></label>
            <input asp-for="Login" class="form-control"/>
            <span asp-validation-for="Login" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control"/>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <input class="btn shadow-none btn-outline-dark" type="submit" value="Сменить Vk">
        </div>
    </div>
</form>